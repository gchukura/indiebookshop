{
  "version": 2,
  "buildCommand": "npm run build:next",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "indiebookshop.com"
        }
      ],
      "destination": "https://www.indiebookshop.com/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
