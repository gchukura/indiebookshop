{
  "version": 2,
  "builds": [
    {
      "src": "api/serverless.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/sitemap.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap.js"
    },
    {
      "src": "/ads.txt",
      "headers": { "content-type": "text/plain" },
      "continue": true
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/bookshop/(.*)",
      "dest": "/api/bookshop/$1"
    },
    {
      "src": "/api/(?!bookshop)(.*)",
      "dest": "/api/serverless.js"
    },
    {
      "src": "/(assets|images|fonts|css|js|favicon|apple-touch-icon)/.*",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}