{
  "version": 2,
  "builds": [
    {
      "src": "api/serverless.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/sitemap.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/ads-txt.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/bookshop-slug.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/bookshop/:slug",
      "destination": "/api/bookshop-slug?slug=:slug"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap.js"
    },
    {
      "src": "/ads.txt",
      "dest": "/api/ads-txt.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/bookshop-slug",
      "dest": "/api/bookshop-slug.js"
    },
    {
      "src": "/api/:path*",
      "dest": "/api/serverless.js"
    },
    {
      "src": "/(assets|images|fonts|css|js|favicon|apple-touch-icon)/.*",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/bookshop-slug",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, s-maxage=60, stale-while-revalidate=300"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}