# Google Sheets Configuration
# Copy this file to .env and fill in your actual values

# Set to 'false' to load from Google Sheets (set to 'true' only for testing with sample data)
USE_SAMPLE_DATA=false

# Your Google Sheets Spreadsheet ID
# Find this in your Google Sheets URL: https://docs.google.com/spreadsheets/d/YOUR_SPREADSHEET_ID/edit
GOOGLE_SHEETS_ID=your-spreadsheet-id-here

# Google Service Account Credentials (JSON string)
# Get this from Google Cloud Console → Service Accounts → Create Key (JSON format)
# IMPORTANT: This should be a single-line JSON string. Escape quotes properly.
GOOGLE_SERVICE_ACCOUNT_CREDENTIALS=

# Optional: Mapbox Access Token (for maps)
MAPBOX_ACCESS_TOKEN=

# Optional: SendGrid API Key (for email notifications)
SENDGRID_API_KEY=

# Contact form recipient email (required for contact form to work)
CONTACT_FORM_EMAIL=
